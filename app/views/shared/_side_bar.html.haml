.side
  .side__header
    %p.side__header--user-name
      =current_user.name
    .side__header--user-icons
      = link_to new_group_path do
        %i.fas.fa-edit.sideicons-color
      = link_to edit_user_path(current_user) do
        %i.fas.fa-cog.sideicons-color
  .side-groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__last-message
            = group.show_last_message
